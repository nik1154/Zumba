<!DOCTYPE html>
<html>
<head>
  <title>Zumba</title>

<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous"> 
    <!--animate CSS-->
    <link rel="stylesheet" href="/css/animate.css">
  <link href="https://fonts.googleapis.com/css?family=Poiret+One" rel="stylesheet">
  <!-- style sheet -->
  <link rel="stylesheet" type="text/css" href="/css/style.css">
 <!--  <link rel="stylesheet" type="text/css" href="style.css"> -->
</head>


<body>
  <div class="login-wrapper" id="logIn-wrapper">

    <div class="login-left">
      <div class="h1">
        <div class="container animated fadeIn delay-1s">
                <img class="nlogo" src="/imgs/Home.png">
        </div>
      </div>
    </div>
      

    <div class="login-right">
      <div class="h2">
        <img class="logo" src="/imgs/Logo.png">
      </div>
      <form method="POST" action="/users/login">
      <div class="form-group">
        <h5>Email ID</h5><hr>
        <input type="text" id="email" placeholder="Email" name="loginemail">   
      </div>
      <div class="form-group">
        <h5>Password</h5><hr>
        <input type="password" id="password" placeholder="Password" name="loginpassword">  
      </div>
      <div class="button-area">
        <button class="btn" id="login">Log In</button>
      </div>
      </form>
      <a href="#" class="signin-link" id="signupbtn" >Don't have an account? Click Here!</a>
    </div>
  </div>

    <!-- Signup wrapper -->
    <div class="login-wrapper animated fadeIn delay-0.5s" id="signup" style="display:none;">

    <div class="login-left">
      <div class="h1">
        <div class="container animated fadeIn delay-1s">
                <img class="nlogo" src="/imgs/Home.png">
        </div>
      </div>
    </div>
      

    <div class="login-right">
      <div class="h2">
        <img class="logo" src="/imgs/Logo.png">
      </div>
      <form method="POST" action="/users/register">
      <div class="signup-group">
        <input type="text" id="name" placeholder="Full Name" name="username" required>   
      </div>
      <div class="signup-group">
        <input type="email" id="mail" placeholder="Email" name="email" required>   
      </div>
      <div class="signup-group">
        <input type="password" id="pass" placeholder="password" name="password" onkeyup='check();'>  
      </div>
      <div class="signup-group">
        <input type="password" id="confirmPass" placeholder="Confirm Password" name="confirmPassword" onkeyup='check();'>
        <br>
        <span id="message"></span>  
      </div>
      <div class="button-area">
        <button class="btn" type="submit">SignUp</button>
      </div>
    </form>
       <a href="#" class="signin-link" id="accountExists" >Already have an account? Click Here!</a>
    </div>
    </div>


<script type="text/javascript" src="/js/script.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#login').on('click', function (e) {
                    // Make the request to the backend to log in.
                    window.location = "/auth/google";
                })
            });
        </script>
        <script>
        </script>


</body>
</html>
